/* ==UserStyle==
@name         Twitter Hide Warning
@version      1.0.1
@namespace    https://github.com/rod24574575
@description  Hide the warning in X (Twitter).
@author       rod24574575
@homepageURL  https://github.com/rod24574575/monorepo
@supportURL   https://github.com/rod24574575/monorepo/issues
@updateURL    https://github.com/rod24574575/monorepo/raw/main/packages/twitter-hide-warning/twitter-hide-warning.user.styl
@license      MIT
==/UserStyle== */

@-moz-document domain("twitter.com") {
  /* sensitive content */
  div[aria-labelledby^=id] > div:only-child,
  li[id^=verticalGridItem-] {
    & > div:only-child > div:only-child > div:only-child:has(> :last-child:nth-child(2)) {
      & > div:nth-child(1) {
        filter: unset !important;
      }

      & > div:nth-child(2) {
        display: none !important;
      }
    }
  }
}
